    <script>
        // Update time and date
        function updateTime() {
            const now = new Date();
            const timeElements = document.querySelectorAll('#current-time, #output-time');
            const dateElements = document.querySelectorAll('#current-date, #output-date');
            
            // Format time
            let hours = now.getHours();
            const ampm = hours >= 12 ? 'PM' : 'AM';
            hours = hours % 12;
            hours = hours ? hours : 12;
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const seconds = now.getSeconds().toString().padStart(2, '0');
            const timeString = `${hours}:${minutes}:${seconds} ${ampm}`;
            
            timeElements.forEach(el => el.textContent = timeString);
            
            // Format date
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const dateString = now.toLocaleDateString('en-US', options);
            dateElements.forEach(el => el.textContent = dateString);
        }
        
        setInterval(updateTime, 1000);
        updateTime();
        
        // Tab functionality
        document.querySelectorAll('.service-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                // Remove active class from all tabs and content
                document.querySelectorAll('.service-tab, .tab-content').forEach(el => {
                    el.classList.remove('active');
                });
                
                // Add active class to clicked tab and corresponding content
                this.classList.add('active');
                const tabId = this.getAttribute('data-tab');
                document.getElementById(`${tabId}-tab`).classList.add('active');
            });
        });
        
        // Simulate progress bar movement
        setInterval(() => {
            const progressBar = document.querySelector('.progress-bar');
            const currentWidth = parseFloat(progressBar.style.width) || 0;
            const newWidth = (currentWidth + 0.5) % 100;
            progressBar.style.width = `${newWidth}%`;
        }, 1000);
        
        // Button hover effects
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.05)';
            });
            
            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });
        
        // Volume control display
        const volumeSlider = document.querySelector('.volume-control input');
        volumeSlider.addEventListener('input', function() {
            const volumeValue = this.value;
            const volumeIcon = document.querySelector('.volume-icon');
            this.nextElementSibling.textContent = `${volumeValue}%`;
            
            if (volumeValue == 0) {
                volumeIcon.className = 'fas fa-volume-mute volume-icon';
            } else if (volumeValue < 50) {
                volumeIcon.className = 'fas fa-volume-down volume-icon';
            } else {
                volumeIcon.className = 'fas fa-volume-up volume-icon';
            }
        });
        
        // Playback control functionality
        document.querySelectorAll('.playback-controls .btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Visual feedback
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1.05)';
                }, 100);
                
                // Here you would add actual playback control functionality
            });
        });
    </script>
